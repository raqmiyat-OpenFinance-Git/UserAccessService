<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Error" internalLogFile="${Logedir}./nlog-internal.txt">

	<variable name="Logedir" value="D:\Logs\OpenFinanceWebApi\"/>

	<targets>

		<target name="NLogWebApiService" xsi:type="File" layout="Timestamp: ${longdate} |${level:uppercase=true}| ${message}"
				  fileName="${Logedir}./NLogWebApiService/NLogWebApiService.txt" archiveAboveSize ="2000000"
				  archiveFileName="${Logedir}./NLogWebApiService/Archives/NLogWebApiService.{#}.txt"
				  archiveDateFormat="yyyy-MM-dd HH_mm_ss" archiveNumbering="Date" maxArchiveDays="1"
				  concurrentWrites="true" keepFileOpen="true" openFileCacheTimeout = "30"/>

		<target name="MQLog" xsi:type="File" layout="Timestamp: ${longdate} |${level:uppercase=true}| ${message}"
			   fileName="${Logedir}./MQLog/MQLog.txt" archiveAboveSize ="2000000"
			   archiveFileName="${Logedir}./MQLog/Archives/MQLog.{#}.txt"
			   archiveDateFormat="yyyy-MM-dd HH_mm_ss" archiveNumbering="Date" maxArchiveDays="1"
			   concurrentWrites="true" keepFileOpen="true" openFileCacheTimeout = "30"/>

		<target name="jsonFile" xsi:type="File"
        fileName="${Logedir}/NLogWebApiService/NLogWebApiService.json"
        encoding="utf-8"
        archiveEvery="Day"
        maxArchiveFiles="7"
        concurrentWrites="true"
        keepFileOpen="false">
			<layout xsi:type="JsonLayout" includeAllProperties="true" renderEmptyObject="false">
				<attribute name="time" layout="${longdate}" />
				<attribute name="level" layout="${level:upperCase=true}" />
				<attribute name="logger" layout="${logger}" />
				<attribute name="message" layout="${message}" />
				<attribute name="stackTrace" layout="${exception:format=ToString}" />
			</layout>
		</target>

	</targets>

	<rules>
		<logger name="*" minlevel="Info" writeTo="jsonFile" />
		<logger name="NLogWebApiService" minlevel="Trace" writeTo="NLogWebApiService" />
		<logger name="MQLog" minlevel="Trace" writeTo="MQLog" />
	</rules>

	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>
</nlog>
